<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/logo"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="4"
        android:paddingTop="100px"
        android:paddingBottom="100px"
        android:adjustViewBounds="true"
        android:src="@mipmap/timetable_1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_gravity="center_horizontal">
        <TextView android:id="@+id/loginid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이디"/>
        <EditText android:id="@+id/inputid"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:hint="학번"
            android:maxLength="30"
            android:singleLine="true"/>

        <TextView android:id="@+id/loginpw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"/>
        <EditText android:id="@+id/inputpw"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:hint="주민번호 뒷자리"
            android:inputType="textPassword"
            android:maxLength="30"
            android:singleLine="true"/>

        <Button android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로그인"/>

        <Button android:id="@+id/test_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="DBtest"/>
    </LinearLayout>

    <TextView android:id="@+id/nouser_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="10px"
        android:text="비회원으로 시작"/>
    <ImageView
        android:layout_width="400px"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:src="@mipmap/dsclogo3"/>
</LinearLayout>