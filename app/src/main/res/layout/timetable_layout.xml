<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/timetable_root">

    <RelativeLayout android:id="@+id/relative_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="80px"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:paddingTop="10px"
        android:textSize="15dp"
        android:text="name"/>
    <ImageView android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="65px"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:paddingTop="18px"
        android:paddingRight="90px"
        android:adjustViewBounds="true"
        android:src="@mipmap/setting"/>
    <ImageView android:id="@+id/announce"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:paddingTop="20px"
        android:paddingRight="10px"
        android:adjustViewBounds="true"
        android:src="@mipmap/announce"/>
    </RelativeLayout>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#999999"/>-->
    <TextView android:id="@+id/semester"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="10px"
        android:background="@color/base"
        android:text="시간표를 선택해주십시오."/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#999999"/>-->

    <GridLayout
        android:id="@+id/timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridLayout>
</LinearLayout>