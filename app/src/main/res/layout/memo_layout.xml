<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView android:id="@+id/memotext"
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:gravity="center"
        android:background="@color/subject"
        android:textSize="25dp"
        android:textColor="#EEEEFF"
        android:text="메모"/>
    <TextView android:id="@+id/subjecttext"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:paddingLeft="80px"
        android:paddingTop="25px"
        android:textSize="17dp"/>

    <ScrollView android:id="@+id/scrollmemo"
        android:layout_width="1200px"
        android:layout_height="1300px"
        android:paddingLeft="100px"
        android:paddingTop="10px"
        android:paddingRight="40px"
        android:paddingBottom="20px"
        android:layout_gravity="center">
        <LinearLayout android:id="@+id/relativememo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="1200px"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:paddingLeft="30px">

        <EditText android:id="@+id/inputmemo"
            android:layout_width="850px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"/>
        <Button android:id="@+id/send_button"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:text="OK"/>

    </LinearLayout>

</LinearLayout>